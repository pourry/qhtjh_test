<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.example.spring_boot_mode.dao.mode.GamePicturesDao">
    <resultMap id="NovelPicturesMap" type="com.example.spring_boot_mode.entity.mode.GamePictures">
        <!--    property:实体类中       column:数据库中字段          -->
        <result property="id" column="id"/>
        <result property="ssgameid" column="ssgameid"/>
        <result property="pictureUrl" column="pictureUrl"/>
        <result property="pictureName" column="pictureName"/>
        <result property="pictureLogic" column="pictureLogic"/>
        <result property="picturePath" column="picturePath"/>
        <result property="createTime" column="createTime"/>
    </resultMap>

    <sql id="selectGamePictures">
        select id,
               ssgameid,
               pictureUrl,
               pictureName,
               pictureLogic,
               picturePath,
               createTime

        from  game_pictures
    </sql>
    <insert id="insertpictures" >
        insert into game_pictures (id,
                                       ssgameid,
                                       pictureUrl,
                                       pictureName,
                                       pictureLogic,
                                       picturePath,
                                       createTime)
                                       values
                                       <foreach collection="pictures" separator="," item="picture">
                                           (
                                           #{picture.id},
                                           #{picture.ssgameid},
                                           #{picture.pictureUrl},
                                           #{picture.pictureName},
                                           #{picture.pictureLogic},
                                           #{picture.picturePath},
                                           #{picture.createTime}
                                           )
                                       </foreach>
    </insert>
    <select id="selectByanimationIds" resultMap="NovelPicturesMap">
        select id,
        ssgameid,
         pictureUrl,
        pictureName,
        pictureLogic,
        picturePath,
        createTime

        from  game_pictures
        where
        ssgameid in
            <foreach collection="animationIds" item="item" open="(" close=")" separator=",">
                #{item}
            </foreach>
    </select>
    <select id="selectPathByanimationIds" resultType="String">
        select
        concat(picturePath ,'\\', pictureLogic) as picturePath
        from  game_pictures
        where
        ssgameid in
        <foreach collection="ids" item="item" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </select>
    <select id="selectIdByanimationId"  resultMap="NovelPicturesMap">
        <include refid="selectGamePictures"/>
        where
        ssgameid = #{id}
    </select>
    <delete id="deleteByids" >
        delete from game_pictures
        where id in
        <foreach collection="ids" separator="," open="(" close=")" item="id">
            #{id}
        </foreach>
    </delete>
    <delete id="deleteByanmationids" >
        delete from game_pictures
        where ssgameid in
        <foreach collection="ids" separator="," open="(" close=")" item="id">
            #{id}
        </foreach>
    </delete>
</mapper>