<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.example.spring_boot_mode.dao.mode.AnimationPicturesDao">
    <resultMap id="AnimationPicturesMap" type="com.example.spring_boot_mode.entity.mode.AnimationPictures">
        <!--    property:实体类中       column:数据库中字段          -->
        <result property="id" column="id"/>
        <result property="ssanimationid" column="ssanimationid"/>
        <result property="pictureUrl" column="pictureUrl"/>
        <result property="pictureName" column="pictureName"/>
        <result property="pictureLogic" column="pictureLogic"/>
        <result property="picturePath" column="picturePath"/>
    </resultMap>

    <sql id="selectAnimationPictures">
        select id,
               ssanimationid,
               pictureUrl,
               pictureName,
               pictureLogic,
               picturePath

        from  anmation_pictures
    </sql>
    <insert id="insertpictures" >
        insert into anmation_pictures (id,
                                       ssanimationid,
                                       pictureUrl,
                                       pictureName,
                                       pictureLogic,
                                       picturePath)
                                       values
                                       <foreach collection="pictures" separator="," item="picture">
                                           (
                                           #{picture.id},
                                           #{picture.ssanimationid},
                                           #{picture.pictureUrl},
                                           #{picture.pictureName},
                                           #{picture.pictureLogic},
                                           #{picture.picturePath}
                                           )
                                       </foreach>
    </insert>
    <select id="selectByanimationIds" resultMap="AnimationPicturesMap">
        select id,
        ssanimationid,
        (picturePath+'\'+pictureLogic) as pictureUrl,
        pictureName,
        pictureLogic,
        picturePath

        from  anmation_pictures
        <where>
            ssanimationid in
            <foreach collection="animationIds" item="item" open="(" close=")" separator=",">
                #{item}
            </foreach>
        </where>
    </select>
</mapper>